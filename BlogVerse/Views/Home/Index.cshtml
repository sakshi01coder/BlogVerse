@{
    ViewData["Title"] = "Welcome to BlogVerse";
}

<!-- Hero Section -->
<section class="hero-section position-relative">
    <div class="hero-overlay"></div>
    <div class="hero-content position-relative text-white text-center">
        <h1 class="hero-title">
            Welcome to <span class="brand-name">BlogVerse</span>
        </h1>
        <p>Discover. Write. Share. Your voice matters.</p>
        <div class="mt-3">
            <a href="/Account/Login" class="btn btn-primary me-2">Sign In</a>
            <a href="/Account/Register" class="btn btn-outline-light">Get Started</a>
        </div>
    </div>
</section>


<!-- Why BlogVerse Section -->
<section class="why-section py-5">
    <div class="container text-center">
        <h2 class="mb-4 text-accent">Why BlogVerse?</h2>
        <div class="row">
            <div class="col-md-3">
                <div class="icon-frame mb-2">
                    <img src="~/images/icon-trending.jpg" alt="Trending" class="icon-img rounded-circle" />
                </div>
                <h5>Trending Topics</h5>
                <p>Stay ahead with the latest blog trends and insights.</p>
            </div>
            <div class="col-md-3">
                <div class="icon-frame mb-2">
                    <img src="~/images/icon-topics.jpg" alt="Engaging Reads" class="icon-img rounded-circle" />
                </div>
                <h5>Engaging Reads</h5>
                <p>Explore diverse genres and voices that inspire.</p>
            </div>
            <div class="col-md-3">
                <div class="icon-frame mb-2">
                    <img src="~/images/icon-save.jpg" alt="Save for Later" class="icon-img rounded-circle" />
                </div>
                <h5>Save for Later</h5>
                <p>Bookmark blogs you love and revisit anytime.</p>
            </div>
            <div class="col-md-3">
                <div class="icon-frame mb-2">
                    <img src="~/images/icon-recommend.jpg" alt="Smart Suggestions" class="icon-img rounded-circle" />
                </div>
                <h5>Smart Suggestions</h5>
                <p>Get personalized writing prompts and ideas.</p>
            </div>
        </div>
    </div>
</section>

<!-- Trending Blogs Section -->
<section class="trending-section py-5 bg-light">
    <div class="container text-center">
        <h2 class="mb-4 text-accent">Trending Blogs</h2>
        <div class="row">
            <div class="col-md-4 mb-3">
                <a href="/Blog/HowToStartBlogging2025" class="text-decoration-none text-dark">
                    <img src="~/images/trending-blog-1.jpg" class="img-thumbnail" alt="Trending Blog 1" />
                    <h6 class="mt-2">How to Start Blogging in 2025</h6>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="/Blog/Top10TechBlogs" class="text-decoration-none text-dark">
                    <img src="~/images/trending-blog-2.jpg" class="img-thumbnail" alt="Trending Blog 2" />
                    <h6 class="mt-2">Top 10 Tech Blogs to Follow</h6>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="/Blog/MentalHealthJourney" class="text-decoration-none text-dark">
                    <img src="~/images/trending-blog-3.jpg" class="img-thumbnail" alt="Trending Blog 3" />
                    <h6 class="mt-2">Mental Health &amp; Writing Journey</h6>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Footer CTA Section -->
<section class="footer-cta text-center text-white d-flex align-items-center justify-content-center">
    <div class="cta-overlay"></div>
    <div class="cta-content container">
        <h2 class="fw-bold">Ready to start your blogging journey?</h2>
        <a href="/Account/Register" class="btn btn-primary mt-3 px-4 py-2">Join BlogVerse Now</a>
    </div>
</section>

<!-- Real Footer -->
<footer class="real-footer text-center text-white py-3">
    <div class="container">
        &copy; 2025 - <strong>BlogVerse</strong> |
        <a href="/Home/Privacy" class="text-white text-decoration-underline">Privacy</a>
    </div>
</footer>