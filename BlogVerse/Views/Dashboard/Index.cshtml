@* Dashboard/Index.cshtml *@
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}
@section Styles {
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            overflow-x: hidden;
            background-color: black;
        }

        .main-content-wrapper {
            /* Existing styles */
            padding-left: 0; /* Remove the left padding */
            transition: padding-left 0.3s ease;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            /* Add your desired background color here */
        }

        body.sidebar-collapsed .main-content-wrapper {
            padding-left: 0; /* Keep this at 0 if you want no padding when collapsed */
        }


        .main-content-wrapper main {
            background-color: #F4EAF1;
        }



        .header-image-container {
            max-width: 960px;
            position: relative;
            width: 100%;
            margin: 20px auto 380px auto;
        }

        /* Overlay Content (Search & Title) */
        .overlay-content {
            position: absolute;
            top: 115%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
            width: 100%;
            max-width: 900px;
            padding: 0 20px;
        }

            .overlay-content h2 {
                margin-bottom: 15px;
                font-size: 3rem;
            }

            .overlay-content .input-group {
                max-width: 800px;
                margin: 0 auto;
            }

        .nav-tabs {
            display: flex;
            justify-content: center;
            gap: 10px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
            margin: 0 auto 10px auto;
            max-width: 960px;
            width: 100%;
        }

            .nav-tabs .nav-link {
                color: #555;
                font-weight: 500;
                padding: 10px 15px;
                text-decoration: none;
            }

                .nav-tabs .nav-link.active {
                    color: #007bff;
                    border-bottom: 2px solid #007bff;
                }

        .mb-4 {
            margin-bottom: 20px;
            max-width: 960px;
            margin-left: auto;
            margin-right: auto;
            width: 100%;
        }

        .nav-pills {
            display: flex;
            gap: 10px;
            flex-wrap: nowrap;
            overflow-x: auto;
            white-space: nowrap;
            padding: 10px 15px;
            background-color: #fff;
            border-radius: 8px;
            scrollbar-width: none;
            width: 100%;
        }

            .nav-pills::-webkit-scrollbar {
                display: none;
            }

            .nav-pills .nav-link {
                color: #555;
                background-color: #eaeaea;
                padding: 8px 15px;
                border-radius: 20px;
                white-space: nowrap;
            }

                .nav-pills .nav-link.active {
                    background-color: #007bff;
                    color: #fff;
                }

        div:has(> h4:first-child) {
            max-width: 960px;
            margin: 20px auto 0 auto;
            width: 100%;
        }

        h4 {
            margin-bottom: 15px;
        }



        .card {
            transition: transform 0.2s ease-in-out;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            background-color: #fff;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

            .card:hover {
                transform: scale(1.02);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
            }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-subtitle {
            font-weight: 600;
            color: #6c757d !important;
            margin-bottom: 5px;
            font-size: 0.8rem;
        }

        .card-title {
            font-weight: bold;
            font-size: 1.1rem;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 0.9rem;
            color: #495057;
            margin-bottom: 10px;
        }

        .d-flex.justify-content-between.align-items-center {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.8rem;
            color: #6c757d;
            margin-top: 10px;
        }

        .text-muted {
            color: #6c757d !important;
        }

        .badge.bg-danger {
            font-size: 0.75rem;
            padding: 5px 8px;
            border-radius: 4px;
        }

        .position-relative {
            position: relative;
        }

        .position-absolute.top-0.start-0.m-2 {
            position: absolute;
            top: 0;
            left: 0;
            margin: 8px;
        }

    </style>
}
<div class="main-content-wrapper">
    <main class="flex-grow-1 p-4">
        <div class="header-image-container">
            <img src="~/images/dashboard-search-banner.png" alt="Search Banner" style="width: 100%; height: auto; display: block;">
            <div class="overlay-content">
                <h2 class="mb-3">Explore the BlogVerse</h2>
                <div class="input-group mx-auto">
                    <input type="text" class="form-control" placeholder="Search blogs...">
                    <button class="btn btn-outline-light" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>

        <ul class="nav nav-tabs mb-3">
            <li class="nav-item">
                <a class="nav-link active" href="#">Following</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Community</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Trending</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">For You</a>
            </li>
        </ul>

        <div class="mb-4">
            <ul class="nav nav-pills overflow-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="#">All</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Business</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Entertainment</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Global</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Politics</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Technology</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Sport</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Food & Drink</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Art</a>
                </li>
            </ul>
        </div>

        <div>
            <h4>Trending News</h4>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <div class="col">
                    <div class="card h-100">
                        <img src="~/images/juice.jpg" class="card-img-top" alt="Coffee and Pancakes" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted"><i class="fas fa-utensils me-1"></i> Food & Drink</h6>
                            <h5 class="card-title">Flavors & Feasts: Latest Culinary Trends and Savory Delights</h5>
                            <p class="card-text">Explore the newest culinary trends and indulge in mouth-watering delights with our comprehensive coverage of flavors and feasts...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted"><i class="fas fa-user me-1"></i> Leonor Davinci</small>
                                <small class="text-muted">2h Ago</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <div class="position-relative">
                            <img src="~/images/culinary.png" class="card-img-top" alt="Delicious Cake Dessert" style="height: 200px; object-fit: cover;">
                            <span class="badge bg-danger position-absolute top-0 start-0 m-2">LIVE</span>
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted"><i class="fas fa-utensils me-1"></i> Desserts</h6>
                            <h5 class="card-title">Heavenly Cakes</h5>
                            <p class="card-text">Dive into the world of decadent cake desserts—from classic chocolate layers to fruity delights and artisanal creations that melt in your mouth...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted"><i class="fas fa-user me-1"></i> Chloe Baker</small>
                                <small class="text-muted">45m Ago</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <img src="~/images/sports.jpg" class="card-img-top" alt="Basketball" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted"><i class="fas fa-basketball-ball me-1"></i> Sport</h6>
                            <h5 class="card-title">Basketball Blitz: Courtside Action & Star Highlights</h5>
                            <p class="card-text">Experience the thrill of the court with updates on NBA matchups, rising stars, legendary plays, and in-depth coverage of basketball culture around the globe.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted"><i class="fas fa-user me-1"></i> Leonor Davinci</small>
                                <small class="text-muted">2h Ago</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <img src="~/images/headphones.png" class="card-img-top" alt="Headphones" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted"><i class="fas fa-headphones me-1"></i> Technology</h6>
                            <h5 class="card-title">Flavors & Feasts: Latest Culinary Trends and Savory Delights</h5>
                            <p class="card-text">Discover the cutting-edge of technology with our in-depth articles on gadgets, software, AI, and the future of innovation...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted"><i class="fas fa-user me-1"></i> Leonor Davinci</small>
                                <small class="text-muted">2h Ago</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <img src="~/images/politics.jpg" class="card-img-top" alt="Political News" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted"><i class="fas fa-landmark me-1"></i> Politics</h6>
                            <h5 class="card-title">Power & Policy: Decoding Today’s Political Landscape</h5>
                            <p class="card-text">Stay informed with expert insights, policy analysis, and the latest updates from the corridors of power — local, national, and global.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted"><i class="fas fa-user me-1"></i> Leonor Davinci</small>
                                <small class="text-muted">2h Ago</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <img src="~/images/abstract.jpg" class="card-img-top" alt="Abstract Art" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted"><i class="fas fa-palette me-1"></i> Art & Design</h6>
                            <h5 class="card-title">Art and Craft</h5>
                            <p class="card-text">Immerse yourself in the world of creativity with our articles on art, design, photography, and the inspiring stories behind them...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted"><i class="fas fa-user me-1"></i> Reya Poddar</small>
                                <small class="text-muted">2h Ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle click on the category pills
            $('.nav-pills .nav-link').on('click', function() {
                $('.nav-pills .nav-link.active').removeClass('active');
                $(this).addClass('active');
            });

            // Handle click on the "Breaking News" link
            $('#breakingNewsSidebarLink').on('click', function(e) {
                e.preventDefault(); // Prevent the default link behavior (page reload)

                // Load static HTML content
                $('#mainContentArea').html(`
                    <h4>Breaking News</h4>
                    <p>This is the content for breaking news!</p>
                    <p>You can add more HTML here as needed.</p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Breaking Story 1</h5>
                                    <p class="card-text">Details of the first breaking news story.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Breaking Story 2</h5>
                                    <p class="card-text">Details of the second breaking news story.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                `);
            });
        });
    </script>
}

