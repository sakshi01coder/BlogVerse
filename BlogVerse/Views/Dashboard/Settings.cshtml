@* Views/Dashboard/Settings.cshtml *@
@{
    ViewData["Title"] = "Settings";
}

<style>
    :root {
        --primary-bg: #F4EAF1;
        --navbar-bg: #B9B1CD;
        --footer-bg: #B6A8CA;
        --text-color: #000000; /* Changed to black */
        --link-color: #007bff;
    }

    .card-header {
        background-color: var(--navbar-bg) !important;
        color: var(--text-color) !important;
        border-bottom: 1px solid #ddd;
    }

    .card-body {
        background-color: var(--primary-bg) !important;
        color: var(--text-color) !important;
    }

    h2, h5, label, .form-check-label {
        color: var(--text-color) !important;
    }

    .form-control {
        border: 1px solid #ccc;
        background-color: white;
        color: var(--text-color);
    }

    .form-check-input:checked {
        background-color: var(--link-color) !important;
        border-color: var(--link-color) !important;
    }

    .btn-primary {
        background-color: var(--link-color) !important;
        border-color: var(--link-color) !important;
        color: white !important;
    }

        .btn-primary:hover {
            background-color: darken(var(--link-color), 10%) !important;
            border-color: darken(var(--link-color), 10%) !important;
        }

    .btn-secondary {
        background-color: #6c757d !important;
        border-color: #6c757d !important;
        color: white !important;
    }

        .btn-secondary:hover {
            background-color: darken(#6c757d, 10%) !important;
            border-color: darken(#6c757d, 10%) !important;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h2 class="mb-0">Account Settings</h2>
                </div>
                <div class="card-body">
                    <h5 class="mb-3">Profile Settings</h5>
                    <div class="mb-3">
                        <label for="displayName" class="form-label">Display Name</label>
                        <input type="text" class="form-control" id="displayName" value="YourDisplayName">
                    </div>
                    <div class="mb-3">
                        <label for="bio" class="form-label">Bio</label>
                        <textarea class="form-control" id="bio" rows="3">A short description about yourself.</textarea>
                    </div>

                    <hr class="my-4">
                    <h5 class="mb-3">Email Notifications</h5>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="newFollower" checked>
                        <label class="form-check-label" for="newFollower">Notify me when someone follows me</label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="newComment">
                        <label class="form-check-label" for="newComment">Notify me of new comments on my blogs</label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="blogUpdates" checked>
                        <label class="form-check-label" for="blogUpdates">Receive updates about new blogs from followed channels</label>
                    </div>

                    <hr class="my-4">
                    <h5 class="mb-3">Privacy Settings</h5>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="profileVisibility" id="public" value="public" checked>
                        <label class="form-check-label" for="public">Public - Everyone can view my profile</label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="profileVisibility" id="private" value="private">
                        <label class="form-check-label" for="private">Private - Only followers can view my profile</label>
                    </div>

                    <button class="btn btn-primary">
                        <i class="fas fa-save me-2"></i> Save Changes
                    </button>
                    <button class="btn btn-secondary ms-2">
                        <i class="fas fa-undo me-2"></i> Reset Settings
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

