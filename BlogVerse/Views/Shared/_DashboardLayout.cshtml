<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"] - BlogVerse</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/dashboard.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body style="background-color: #F4EAF1; display: flex;">
	<div class="dashboard-container d-flex flex-grow-1" style="background-color: #B9B1CD;">

		<button class="hamburger-btn d-lg-block d-none" onclick="toggleSidebar()" style="margin: 15px 0 0 15px;">
			<i class="fas fa-bars"></i>
		</button>

		<aside class="sidebar p-4" style="background-color: #B9B1CD; color: white; width: 260px; transition: margin-left 0.3s ease-in-out; margin-left: 0; flex-shrink: 0;">
			<div class="logo mb-4 text-center">
				<img src="~/images/modified_logo.png" alt="BlogVerse Logo" class="img-fluid" style="max-width: 150px;">
			</div>
			<nav class="mt-2">
				<ul class="nav flex-column">
					<li class="nav-item">
						<a class="nav-link active" href="@Url.Action("Index", "Dashboard")" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
							<i class="fas fa-home me-2"></i> Home
						</a>
					</li>

					<li class="nav-item">
						<a class="nav-link" href="@Url.Action("BreakingNews", "Dashboard")" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
							<i class="fas fa-bolt me-2"></i> Breaking News
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
							<i class="fas fa-chart-line me-2"></i> Trending
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="@Url.Action("Community", "Dashboard")" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
							<i class="fas fa-users me-2"></i> Community
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
							<i class="fas fa-list-ul me-2"></i> Category
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
							<i class="fas fa-history me-2"></i> History
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
							<i class="fas fa-bookmark me-2"></i> Saved
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
							<i class="fas fa-folder-open me-2"></i> Collections
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="@Url.Action("Settings", "Dashboard")" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
							<i class="fas fa-cog me-2"></i> Settings
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="@Url.Action("Account", "Dashboard")" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
							<i class="fas fa-user-circle me-2"></i> Account
						</a>
					</li>
				</ul>
			</nav>
			<hr class="my-4">
			<div>
				<h6 class="mb-3" style="color: black !important;">Following</h6>
				<ul class="nav flex-column">
					@if (Model != null && Model.FollowedChannels != null)
					{
						@foreach (var channel in Model.FollowedChannels)
						{
							<li class="nav-item">
								<a class="nav-link" href="#" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
									<i class="fas fa-rss me-2"></i> @channel.Name
								</a>
							</li>
						}
						<li class="nav-item">
							<a class="nav-link" href="#" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
								<i class="fas fa-plus-circle me-2"></i> Show More
							</a>
						</li>
					}
					else
					{
						<li class="nav-item">
							<span class="nav-link" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">No followed channels</span>
						</li>
					}
				</ul>
			</div>
			<hr class="my-4">
			<ul class="nav flex-column">
				<li class="nav-item mb-2">
					<a class="btn btn-primary w-100" href="@Url.Action("Create", "Posts")">
						<i class="fas fa-pen-nib me-2"></i> Create a Post
					</a>
				</li>
			</ul>
			<hr class="my-4">
			<ul class="nav flex-column">
				<li class="nav-item">
					<a class="nav-link" href="#" style="color: black !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
						<i class="fas fa-question-circle me-2"></i> Help Center
					</a>
				</li>
				<li class="nav-item">
					<form method="post" action="@Url.Action("Logout", "Logout")" style="margin: 0;">
						<button type="submit" class="nav-link text-danger btn btn-link" style="color: #dc3545 !important; padding: 0.75rem 1rem; text-decoration: none; display: flex; align-items: center;">
							<i class="fas fa-sign-out-alt me-2"></i> Log Out
						</button>
					</form>
				</li>
			</ul>
		</aside>

		<div class="main-content flex-grow-1 p-4" style="transition: margin-left 0.3s ease-in-out; margin-left: 0; padding-right: 315px;">
			@RenderBody()
		</div>

		<aside class="right-sidebar bg-light p-3" style="width: 300px; border-left: 1px solid #eee; position: fixed; top: 0; right: 0; height: 100vh; overflow-y: auto;">
			<div style="background-image: url('/images/png.png'); background-size: cover; background-position: center; height: 500px;"></div>
			<h5 class="mb-3">Top Creator</h5>
			<div class="d-flex align-items-center mb-3">
				<img src="~/images/person3.png" alt="Anne Johnson" class="rounded-circle me-3" width="40" height="40">
				<div>
					<h6 class="mb-0">Anne Johnson</h6>
					<small class="text-muted">10.5k Followers</small>
				</div>
			</div>
			<div class="d-flex align-items-center mb-3">
				<img src="~/images/person2.png" alt="Jane Smith" class="rounded-circle me-3" width="40" height="40">
				<div>
					<h6 class="mb-0">Jane Smith</h6>
					<small class="text-muted">7.8k Followers</small>
				</div>
			</div>
			<div class="d-flex align-items-center mb-3">
				<img src="~/images/person1.png" alt="Peter Jones" class="rounded-circle me-3" width="40" height="40">
				<div>
					<h6 class="mb-0">Peter Jones</h6>
					<small class="text-muted">5.2k Followers</small>
				</div>
			</div>
		</aside>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)

	<script>
		document.addEventListener('DOMContentLoaded', function () {
		const hamburgerBtn = document.querySelector('.hamburger-btn');
		const sidebar = document.querySelector('.sidebar');
		const mainContent = document.querySelector('.main-content');

		hamburgerBtn.addEventListener('click', () => {
		sidebar.classList.toggle('sidebar-hidden');
		mainContent.classList.toggle('full-width');
		});
		});
	</script>
</body>
</html>