@model List<BlogVerse.Models.Post>

@{
    ViewData["Title"] = "My Posts";
}

<h2 class="text-3xl font-bold mb-6 text-gray-800">My Published Posts</h2>

@if (!Model.Any())
{
    <p class="text-gray-600">No published posts yet.</p>
}
else
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var post in Model)
        {
            <div class="border rounded-2xl p-4 bg-white shadow hover:shadow-lg transition duration-200">
                <h3 class="text-xl font-semibold text-gray-800 mb-1">@post.Title</h3>
                <p class="text-sm text-gray-500 mb-2">
                    Category: <span class="font-medium">@post.Category</span> |
                    @post.CreatedAt.ToString("MMM dd, yyyy")
                </p>

                @if (!string.IsNullOrEmpty(post.ImagePath))
                {
                    <img src="@post.ImagePath" alt="@post.Title" class="mt-2 rounded-lg max-h-56 w-full object-cover" />
                }

                @* ✅ FIXED: Display actual HTML content using Html.Raw *@
                <div class="mt-3 text-gray-700 text-sm line-clamp-4 overflow-hidden">
                    @Html.Raw(post.Content)
                </div>

                <div class="mt-4 flex justify-between items-center">
                    <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id"
                       class="text-indigo-600 hover:underline text-sm font-medium">
                        Read More →
                    </a>
                    <div class="flex space-x-3">
                        <a asp-action="Edit" asp-route-id="@post.Id"
                           class="text-blue-500 hover:text-blue-700 text-sm font-medium">Edit</a>
                        <a asp-action="Delete" asp-route-id="@post.Id"
                           class="text-red-500 hover:text-red-700 text-sm font-medium">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
