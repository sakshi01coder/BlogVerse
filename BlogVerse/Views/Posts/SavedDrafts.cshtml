@model List<BlogVerse.Models.Post>

@{
    ViewData["Title"] = "Saved Drafts";
}

<h2 class="text-3xl font-bold mb-6 text-gray-800">My Draft Posts</h2>

@if (!Model.Any())
{
    <p class="text-gray-600">No saved drafts yet.</p>
}
else
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var draft in Model)
        {
            <div class="border rounded-2xl p-4 bg-white shadow hover:shadow-lg transition duration-200">
                <h3 class="text-xl font-semibold text-gray-800 mb-1">@draft.Title</h3>
                <p class="text-sm text-gray-500 mb-2">
                    Category: <span class="font-medium">@draft.Category</span> |
                    @draft.CreatedAt.ToString("MMM dd, yyyy")
                </p>

                @if (!string.IsNullOrEmpty(draft.ImagePath))
                {
                    <img src="@draft.ImagePath" alt="@draft.Title" class="mt-2 rounded-lg max-h-56 w-full object-cover" />
                }

                <div class="mt-3 text-gray-700 text-sm">
                    @Html.Raw(draft.Content.Length > 150
                             ? draft.Content.Substring(0, 150) + "..."
                             : draft.Content)
                </div>

                <div class="mt-4 flex justify-between items-center">
                    <a asp-action="Edit" asp-route-id="@draft.Id"
                       class="text-blue-500 hover:text-blue-700 text-sm font-medium">Edit</a>
                    <div class="flex space-x-4">
                        <a asp-action="Delete" asp-route-id="@draft.Id"
                           class="text-red-500 hover:text-red-700 text-sm font-medium">Delete</a>
                        <form asp-action="Publish" asp-controller="Post" method="post" class="inline">
                            <input type="hidden" name="id" value="@draft.Id" />
                            <button type="submit" class="text-green-600 hover:text-green-800 text-sm font-medium">
                                Publish
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
